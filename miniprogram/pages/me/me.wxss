/* pages/me/me.wxss */
.me{
  background: #e54847;
  height:400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}
.me-bg{
  width: 100%;
  background: #fff;
  height: 200rpx;
  border-top-left-radius:100%;
  border-top-right-radius:100%;
  position: absolute;
  top: 50%;
}
.me-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%,60rpx); /*居中*/
  z-index: 999;
}
.me-name{
  font-size: 36rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,270rpx);
  z-index: 999;
}
.separate{
  width: 100%;
  height: 10rpx;
  background: #dbdbdb;
}
/* 按钮点击默认样式 */
.button-hover{
  background-color: #fff;
}