/* 轮播图 */
.swiper{
  width: 100%;
  height: 300rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
/* 轮播图end */
/* 官方商城 正品保障 售后无忧 */
.promise{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 20rpx;
}
.promise-image{
  width: 30rpx;
  height: 30rpx;
}
.promise-text,.nav-text{
  font-size: 30rpx;
  color: #b7b7b7;
}
/* 4个导航栏 图片+文字 */
.nav{
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}
.nav-sm{
  display: flex;
  flex-direction: column;
}
.nav-image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
/* 商品列表 */
.productList{
  margin: 10rpx 2%; 
}
.productBorder:first-child{
  float: left;
  width: 50%;
  height: 600rpx;
  position: relative;
}
.productBorder:nth-child(2),.productBorder:nth-child(3){
  float: left;
  width: 50%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
}

.productBorder:first-child .productPic{
  width: 300rpx; 
  height: 300rpx;
  position: absolute;
  left: 15%;
  top: 40%;
}
.productPic{
  width: 200rpx; 
  height:200rpx;
  position: absolute;
  top: 55%;
  left:35%;
}
.productPic>image{
  width: 100%;
  height: 100%;
}
.productName{
  margin-top:20rpx;
  margin-left: 20rpx;
  font-size:35rpx;
}
.productPrice{
  margin-top:20rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}
van-tag{
  margin-top:20rpx;
  margin-left: 20rpx;
}